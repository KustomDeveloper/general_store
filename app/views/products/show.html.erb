<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="p-6">
      <h1 class="text-3xl font-bold mb-4 text-gray-800"><%= @product.name %></h1>
      
      <div class="mb-6">
        <p class="text-gray-600 text-lg"><%= @product.description %></p>
      </div>
      
      <div class="mb-6">
        <p class="text-2xl font-semibold text-green-600">
          Price: <%= number_to_currency(@product.price) %>
        </p>
      </div>

      <%= form_with(url: order_items_path, local: true, class: "flex items-center") do |form| %>
        <%= form.hidden_field :product_id, value: @product.id %>
        <div class="mr-4">
          <%= form.label :quantity, "Quantity:", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.number_field :quantity, value: 1, min: 1, class: "w-20 p-2 border rounded focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <%= button_tag type: 'submit', class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-300 flex items-center" do %>
          <i class="fas fa-cart-plus mr-2"></i> Add to Cart
        <% end %>
      <% end %>
    </div>
  </div>
  
  <div class="mt-8 text-center">
    <%= link_to "Back to Products", products_path, class: "text-blue-500 hover:text-blue-700 underline" %>
  </div>
</div>